local Lib = {}

local function checkIfGameLoaded()
    game.Loaded:Wait()
    print("Game Loaded!")
end
checkIfGameLoaded()

function Lib:InstanceObject(option)
    local class, parent = option.class or nil, option.parent or nil

    local success, Object = pcall(function()
        return Instance.new(class)
    end)

    if not success then
        warn("Ошибка при создании объекта: " .. tostring(Object))
    else Object.Parent = parent 
    Object.Name = option.name end
end
 
return Lib
