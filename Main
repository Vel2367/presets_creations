local Lib = {}

local function checkIfGameLoaded()
    game.Loaded:Wait()
    print("Game Loaded!")
end
checkIfGameLoaded()

function Lib:InstanceObject(option)
    local class = option.class
    local parent = option.parent
    local name = option.name or class
    if not class then
        warn("Не указан класс объекта!")
        return nil
    end

    local success, Object = pcall(function()
        return Instance.new(class)
    end)
    if not success then
        warn("Ошибка при создании объекта: " .. tostring(Object))
        return nil
    end
    Object.Parent = parent
    Object.Name = name

    return Object
end
 
return Lib
